<div class="blog-author d-flex align-items-center">
    <%= image_tag("avatar-2.png", class:"rounded-circle float-left") %>

    <div>
        <h4><%= @customer.linkman %></h4>
        <div class="row">
            <ul class="list-group list-group-flush col-6">
                <li class="list-group-item "><%= @customer.full_name %></li>
                <li class="list-group-item ">采购：<%= @customer.main_purchase %></li>
                <li class="list-group-item ">SQ号：<%= @customer.sq %></li>
            </ul>
            <ul class="list-group list-group-flush col-6">
                <li class="list-group-item ">电话：<%= @customer.phone %></li>
                <li class="list-group-item ">邮箱：<%= @customer.email %></li>
                <li class="list-group-item ">手机：<%= @customer.mobile %></li>
            </ul>
            <p><%= @customer.address %></p>
            <div class="read-more">
                <%= link_to '新增客户跟踪记录', new_customer_track_path %>
            </div>
        </div>
    </div>
</div>


    <h4>客户跟踪:</h4>
    <p>共<%= @customer.tracks.size %>次客户跟踪记录 <small>-<%= @customer.full_name %></small></p>
    <li <hr class="dropdown-divider"></li>
    <% @tracks.each do |track| %>
        <div class="blog-comments">             
                <div class="comment">
                 <%= link_to image_tag("tab-images/del.gif",class:"float-end"),customer_track_path(@customer,track),method: :delete,date:{confirm:"确认删除？"} %>
                    <div class="d-flex">
                        <div class="comment-img"><%= image_tag("comments-3.jpg")%></div> 
                        <div>
                            <h5><a href="<%= edit_customer_track_path(@customer,track) %>"><%= image_tag("tab-images/edt.gif") %><%= track.title %></a></h5>
                            <time><%= track.date %></time>
                            <div class="mb-3">
                                跟进内容：<%= track.content %>
                            </div>
                            <p>
                                跟进结果：<%= track.result %>
                            </p>
                        </div>
                    </div>
                </div>
        </div>

    <% end %>




