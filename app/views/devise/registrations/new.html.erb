<div class="card-body login-box " >
  <h4 class="text-center">注册</h4>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :邮箱, class:"form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-3",placeholder:"Email Address" %>
    </div>

    <div class="field">
      <%= f.label :密码, class:"form-label"  %>
      <% if @minimum_password_length %>
      <em>(最少<%= @minimum_password_length %>个字符)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Enter Password"%>
    </div>

    <div class="field mb-3">
      <%= f.label :再次输入密码, class:"form-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Enter Password" %>
    </div>

    <div class="actions">
      <%= f.submit "注册", class:"btn btn-primary col-12 " %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
