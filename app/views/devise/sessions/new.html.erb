<div class="card-body login-box " >
    <h4 class="text-center">登录</h4>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div>
        <%= f.label :邮箱,class:"form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-3",placeholder:"Email Address" %>
      </div>

      <div>
        <%= f.label :密码,class:"form-label"  %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Enter Password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :记住登录状态 %>
        </div>
      <% end %>

      <div>
        <%= f.submit "提交",class:"btn btn-primary col-12 "  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>







