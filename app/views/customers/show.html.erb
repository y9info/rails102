<p id="notice"><%= notice %></p>

				<div class="container">
					<div class="main-body">
						<div class="row">
							<div class="col-lg-4">
								<div class="card">
									<div class="card-body">
										<div class="d-flex flex-column align-items-center text-center">
											<%= image_tag("avatar-2.png",alt:"Admin",class:"rounded-circle p-1 bg-primary",width:"110") %>
											<div class="mt-3">
												<h4><%= @customer.linkman %></h4>
												<p class="text-secondary mb-1"><%= @customer.full_name %></p>
												<p class="text-muted font-size-sm"><%= @customer.address %></p>
												<%= link_to("跟进记录", customer_tracks_path(@customer), class: "btn btn-primary")%>
												<button class="btn btn-outline-primary"><a href="mailto:<%= @customer.email %>" >给客户发邮件</a></button>
												
											</div>
										</div>
										<hr class="my-4" />
										<ul class="list-group list-group-flush">
											<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
												<h6 class="mb-0">网址：</h6>
												<span class="text-secondary ">
												<%= visit @customer.website %>
											</li>
											<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
												<h6 class="mb-0">简称：</h6>
												<span class="text-secondary"><%= @customer.short_name %></span>
											</li>
											<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
												<h6 class="mb-0">来源：</h6>
												<span class="text-secondary"><%= @customer.origin %></span>
											</li>
											<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
												<h6 class="mb-0">SQ号码：</h6>
												<span class="text-secondary">  <%= @customer.sq %></span>
											</li>
											<li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
												<h6 class="mb-0">等级</h6>
												<span class="text-secondary"><%= @customer.level %></span>
											</li>
										</ul>
									</div>
								</div>
							</div>
							<div class="col-lg-8">
								<div class="card">
									<div class="card-body">
									<%= form_for [@customer] do |form| %>
										<div class="row mb-3">
											<div class="col-sm-3">
												<h6 class="mb-0">Email</h6>
											</div>
											<div class="col-sm-9 text-secondary">
												<%= form.text_field :email, class: "form-control" %>
											</div>
										</div>
										<div class="row mb-3">
											<div class="col-sm-3">
												<h6 class="mb-0">Phone</h6>
											</div>
											<div class="col-sm-9 text-secondary">
												<%= form.text_field :phone, class: "form-control" %>
											</div>
										</div>
										<div class="row mb-3">
											<div class="col-sm-3">
												<h6 class="mb-0">Mobile</h6>
											</div>
											<div class="col-sm-9 text-secondary">
												<%= form.text_field :phone, class: "form-control" %>
											</div>
										</div>
										<div class="row mb-3">
											<div class="col-sm-3">
												<h6 class="mb-0">Fax</h6>
											</div>
											<div class="col-sm-9 text-secondary">
												<%= form.text_field :fax, class: "form-control" %>
											</div>
										</div>
										<div class="row mb-3">
											<div class="col-sm-3">
												<h6 class="mb-0">客户关注产品</h6>
											</div>
											<div class="col-sm-9 text-secondary">
												<%=  form.text_area :main_purchase, class: "form-control"  %>
											</div>
										</div>
										<div class="row mb-3">
											<div class="col-sm-3">
												<h6 class="mb-0">跟踪结果</h6>
											</div>
											<div class="col-sm-9 text-secondary">
												<%=  form.text_area :track_result, class: "form-control"  %>
											</div>
										</div>
										<div class="row mb-3">
											<div class="col-sm-3">
												<h6 class="mb-0">备注</h6>
											</div>
											<div class="col-sm-9 text-secondary">
												<%=  form.text_area :note, class: "form-control",cols:"40", rows:"5", style:"height:130px" %>
											</div>
										</div>

										<div class="row">
											<div class="col-sm-3"></div>
											<div class="col-sm-9 text-secondary">
												<%= form.submit "Save Changes",class: "btn btn-primary px-4 " %>
											</div>
										</div>
									</div>
									
									<% end %>

								</div>
							
